<h1>Listing Stack Word Trees</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="2">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @stack_word_trees.each do |stack_word_tree| %>
      <tr>
        <td><%= stack_word_tree.name %></td>
        <td>
          <%= link_to 'Show', stack_word_tree_path(stack_word_tree), class: "btn btn-default" %>
          <%= link_to 'Remove Tree', stack_word_tree, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

